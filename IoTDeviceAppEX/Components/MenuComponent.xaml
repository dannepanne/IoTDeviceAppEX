<UserControl x:Class="IoTDeviceAppEX.Components.MenuComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IoTDeviceAppEX.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Style="{StaticResource menuBar}">
        <StackPanel Orientation="Horizontal">
            <RadioButton Command="{Binding ControlPanelViewCommand}" Style="{StaticResource menuButton}" Content="&#xf544;"  IsChecked="True" />

            <RadioButton x:Name="btnClose" Click="btnClose_Click" Style="{StaticResource menuButton}" Content="&#xf011;"  Foreground="Red"  />
        </StackPanel>
    </Border>
</UserControl>
